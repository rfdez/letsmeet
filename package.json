{
  "name": "letsmeet",
  "version": "1.0.0",
  "description": "Typescript DDD test for educational purpose only.",
  "repository": {
    "url": ""
  },
  "scripts": {
    "dev:user:backend": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules  ./src/apps/user/backend/start.ts",
    "start:user:backend": "NODE_ENV=production node dist/src/apps/user/backend/start",
    "lint": "npm run eslint:fix",
    "eslint": "eslint 'src/**/*.ts'",
    "eslint:fix": "eslint --fix 'src/**/*.ts'",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{yaml,json}' dist/src",
    "build:clean": "rm -r dist; exit 0",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "NODE_ENV=test jest --passWithNoTests",
    "test:features": "npm run test:user:backend:features",
    "test:user:backend:features": "NODE_ENV=test cucumber-js -p userBackend"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=14.17.6",
    "npm": ">=6.14.15"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "convict": "^5.2.1",
    "express": "^4.17.1",
    "express-promise-router": "^4.1.0",
    "glob": "^7.2.0",
    "http-status": "^1.5.0",
    "mongodb": "^4.1.2",
    "node-dependency-injection": "^2.7.1",
    "uuid": "^8.3.2",
    "uuid-validate": "0.0.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.1",
    "@types/convict": "^6.1.1",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.8",
    "@types/glob": "^7.1.4",
    "@types/jest": "^27.0.2",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^16.10.1",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@types/uuid-validate": "0.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "copy": "^0.3.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "faker": "^5.5.3",
    "husky": "7.0.2",
    "jest": "^27.2.2",
    "lint-staged": "11.1.2",
    "prettier": "2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
